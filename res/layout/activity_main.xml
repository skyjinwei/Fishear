<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fishear"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scaleType="centerInside"
    tools:context="com.example.fishear.MainActivity" >

    <TextView
        android:id="@+id/tingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:text="听魚"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="35dip" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tingTextView"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/tingWord"
            android:layout_width="250dip"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="请输入事件或话题" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/tingbutton"
            style="@style/AppTheme"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="#dbf2ff"
            android:text=" 听  "
            android:textColor="#3a90ef" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="58dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/locationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/satisfKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="获取地方热词..."
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/satisValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/cityWordKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical"
        android:layout_marginLeft="70dip" >

        <TextView
            android:id="@+id/cityWord0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:paddingBottom="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/cityWord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/cityWord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/cityWord3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/cityWord4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dip" />
    </LinearLayout>

</RelativeLayout>