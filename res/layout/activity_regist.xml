<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e8f2fc"
    tools:context="com.example.fishear.RegistActivity" >

    <EditText
        android:id="@+id/rEditUsername"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBaseline="@+id/rUsername"
        android:layout_alignBottom="@+id/rUsername"
        android:layout_alignLeft="@+id/rEditEmail"
        android:background="@drawable/rounded_edittext"
        android:ems="10" >

        <requestFocus />
     </EditText>

    <TextView
        android:id="@+id/rEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rUsername"
        android:layout_below="@+id/rEditUsername"
        android:layout_marginTop="35dp"
        android:textColor="#2593c8"
        android:text="邮箱:" />

    <EditText
        android:id="@+id/rEditEmail"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBaseline="@+id/rEmail"
        android:layout_alignBottom="@+id/rEmail"
        android:layout_alignLeft="@+id/rEditPassword"
        android:background="@drawable/rounded_edittext"
        android:ems="10" />

    <EditText
        android:id="@+id/rEditPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBaseline="@+id/rPassword"
        android:layout_alignBottom="@+id/rPassword"
        android:layout_toRightOf="@+id/rPassword1"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPassword" >
       
    </EditText>

    <TextView
        android:id="@+id/rPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rPassword"
        android:layout_below="@+id/rEditPassword"
        android:layout_marginTop="45dp"
        android:textColor="#2593c8"
        android:text="密码重复：" />

    <EditText
        android:id="@+id/rEdisPassword1"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBottom="@+id/rPassword1"
        android:layout_alignRight="@+id/rEditPassword"
        android:layout_toRightOf="@+id/rPassword1"
        android:ems="10"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/rPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rEmail"
        android:layout_below="@+id/rEditEmail"
        android:layout_marginTop="38dp"
        android:textColor="#2593c8"
        android:text="密码：" />

    <Button
        android:id="@+id/registrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rPassword1"
        android:layout_alignRight="@+id/rEdisPassword1"
        android:layout_below="@+id/rPassword1"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_shape"
        android:text="注册"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/rUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="115dp"
        android:text="用户名："
        android:textColor="#2593c8" />

    <TextView
        android:id="@+id/TextViewRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rEditUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="用户注册"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2593c8"
        android:textSize="35dip" />

</RelativeLayout>
