<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fishear"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fishear.StartActivity" >

    <EditText
        android:id="@+id/start_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        
        android:background="#e9ecf1"
        android:ems="10"
        android:hint="用户名" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/start_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_username"
        android:layout_alignRight="@+id/start_username"
        android:layout_below="@+id/start_username"
        android:layout_marginTop="46dp"
        android:background="#e9ecf1"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/start_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_password"
        android:layout_alignRight="@+id/start_username"
        android:layout_below="@+id/start_password"
        android:layout_marginTop="27dp"
        android:background="#139fdd"
        android:textColor="#fff"
        android:text="登录" />

    <TextView
        android:id="@+id/start_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_login"
        android:layout_below="@+id/start_login"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:textColor="#fff"
        android:text="还没注册？去" />

    <TextView
        android:id="@+id/start_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_text1"
        android:layout_alignBottom="@+id/start_text1"
        android:layout_toRightOf="@+id/start_text1"
        android:textColor="#fff"
        android:clickable="true"
        android:text="注册>>" />

    <TextView
        android:id="@+id/start_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_text1"
        android:layout_below="@+id/start_text1"
        android:layout_marginTop="18dp"
        android:textColor="#fff"
        android:clickable="true"
        android:text="以游客身份进入" />

</RelativeLayout>
