<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fishear"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fishear.StartActivity" >

    <TextView
        android:id="@+id/start_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_text1"
        android:layout_alignBottom="@+id/start_text1"
        android:layout_toRightOf="@+id/start_text1"
        android:textColor="#fff"
        android:clickable="true"
        android:text="注册>>" />

    <TextView
        android:id="@+id/start_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_text1"
        android:layout_below="@+id/start_regist"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="以游客身份进入"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/start_password"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/start_username"
        android:layout_alignRight="@+id/start_username"
        android:layout_below="@+id/start_username"
        android:layout_marginTop="29dp"
        android:background="@drawable/login_shape"
        android:ems="10"
        android:paddingLeft="10dip"
        android:hint="密码"
        android:inputType="textPassword" >

       
    </EditText>

    <Button
        android:id="@+id/start_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_password"
        android:layout_alignRight="@+id/start_username"
        android:layout_below="@+id/start_password"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/start_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_login"
        android:layout_below="@+id/start_login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="还没注册？去"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/start_username"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:background="@drawable/login_shape"
        android:ems="10"
        android:paddingLeft="10dip"
        android:hint="用户名" >
        
         <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:text="听魚"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="35dip" />

</RelativeLayout>
